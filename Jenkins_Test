pipeline {
    agent any
tools{maven 'MAVEN_HOME'}
    stages {
	stage('Checkout') {
            steps {
                checkout scm
            }
        }
		
	stage('Build') {
        steps{
                bat "mvn install"
            }
        }
		
	stage('Test') {
        steps{
                bat "mvn test"
            }
        }
	stage('Analysis') {
        steps {
              withSonarQubeEnv('Test_Sonar') {
                bat 'mvn sonar:sonar'
              }
            }
        }
		stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }

stage('Artifactory Upload') {
        steps{
                rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId: "ARTIFACTORY_SERVER",
                    releaseRepo: 'justcheck.repo',
                    snapshotRepo: 'justcheck.repo'
                )
rtMavenRun (
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: "MAVEN_DEPLOYER",
                )
rtPublishBuildInfo (
                    serverId: "ARTIFACTORY_SERVER"
                )
            }
        }

    }
}
