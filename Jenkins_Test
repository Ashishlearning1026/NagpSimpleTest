pipeline {
    agent any
    stages {
	stage('Checkout') {
            steps {
                checkout scm
            }
        }
		
	stage('Build') {
        steps{
                bat "mvn install"
            }
        }
		
	stage('Test') {
        steps{
                bat "mvn test"
            }
        }
	stage('Analysis') {
        steps {
              withSonarQubeEnv('Sonar') {
                bat 'mvn sonar:sonar'
              }
            }
        }
		stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
    }
}
